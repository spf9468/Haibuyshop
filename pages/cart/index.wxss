page{
  background: #f5f5f5;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
  line-height: 1.6;
}
.cart-box .item{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background: white;
  margin-top: 17rpx;
  border-bottom: 1px solid rgba(234, 236, 240, 0.979);
  border-top: 1px solid rgba(234, 236, 240, 0.979)
}
.cart-box .item .goods-info{
  margin-left: 20rpx;
}
.cart-box .goods-img{
  width: 160rpx;
  margin-left: 20rpx;
}
.cart-box .row{
  color: #fff;
  display: flex;
  flex-direction: row;
  width: 430rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.cart-box .goods-name{
  color: rgb(59, 58, 57);
  font-size: 0.8rem;
  width: calc(100% - 100rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
 
}
.cart-box .attr_color{
  color: rgb(59, 58, 57);
  font-size: 0.8rem;
  font-size: 25rpx;
}
.cart-box .goods-price{
  color: red;
  font-size: 32rpx;
}
.cart-box .goods-type{
  color: #999;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.cart-box .num-box{
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.cart-box .goods-btn{
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  line-height: 60rpx;
  font-weight: bold;
  margin: 0;
 
}
.cart-box .num{
  color: black;
  width: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
}
.cart-box .btn-add{
  font-size: 50rpx;
  color: rgba(167, 158, 158, 0.822);
  background:rgb(236, 226, 226);
}
.cart-box .btn-minus{
  font-size: 28rpx;
  background: #f5f5f8;
  color: rgb(180, 179, 179);
}
.cart-box .btn-groups{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    border-radius: 10rpx;
}
.cart-fixbar{
  position: fixed;
  bottom: 0;
  background:white;
  height: 100rpx;
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.cart-fixbar .allSelect{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  
}
.cart-fixbar .allSelect-text{
  
  margin-left: 20rpx;
}
.cart-fixbar .count{
  margin-left: 80rpx;
  color:black;
  font-size: 36rpx;
}
.cart-fixbar .count .fuhao{
  color: red
}
.cart-fixbar .order{
  color:#fff;
  height: 100rpx;
  background: red;
  line-height: 100rpx;
  position: absolute;
  right: 0;
  padding: 0 40rpx;
  font-size: 32rpx;
}
.cart-fixbar .allnum{
  font-size: 24rpx;
}
.attr_price{
  color:red ;
  font-size: 0.8rem;
  font-size: 25rpx;
}